<Window x:Class="ListaDeCelulares.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListaDeCelulares"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,88,10,10"/>
        <Button x:Name="button" Content="Volar Total" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="139" Height="46" Click="Button_Click"/>
        <Button x:Name="button2" Content="Bateria Total" HorizontalAlignment="Left" Margin="154,20,0,0" VerticalAlignment="Top" Width="139" Height="46" Click="Button2_Click" BorderBrush="#FF040101">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF838383" Offset="0"/>
                    <GradientStop Color="#FFE07878" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="Valor Médio" HorizontalAlignment="Left" Margin="298,20,0,0" VerticalAlignment="Top" Width="114" Height="46" Click="Button1_Click"/>

    </Grid>
</Window>
